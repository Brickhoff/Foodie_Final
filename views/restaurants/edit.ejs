<% include ../partials/header %>

    
        <div class = "row">
            <h1 style ="text-align: center;">Edit <%= restaurant[0].name %></h1>

            <div style = "width: 30%; margin: 25px auto;">
                <form action ="/restaurants/<%= restaurant[0].id %>?_method=PUT" method ="POST">
                    <div class ="form-group">
                        <input class = "form-control" type = "text" name = "name" value = "<%= restaurant[0].name %>" >
                    </div>
                    <div class ="form-group">
                        <input class = "form-control" type = "number" name = "price" value = "<%= restaurant[0].price %>" min = "1.00" step = "1.00">
                    </div>
                    <div class ="form-group">
                        <input class = "form-control" type = "text" name = "image_url" value = "<%= restaurant[0].image_url %>">
                    </div>
                    <div class ="form-group">
                        <input class = "form-control" type = "text" name = "description" value = "<%= restaurant[0].description %>">
                    </div>
                    <div class ="form-group">
                        <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href = "/restaurants">Go Back</a>
            </div>
        
        </div>
    



<% include ../partials/footer %>